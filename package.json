{
  "name": "file-converter-electron-app",
  "version": "1.0.0",
  "description": "file converter program",
  "keywords": [
    "electron",
    "reactjs",
    "typescript"
  ],
  "license": "MIT",
  "author": "",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss -i ./global.css -o ./dist/output.css",
    "watch:css": "tailwindcss -i ./global.css -o ./dist/output.css --watch",
    "start": "electron .",
    "build": "electron-builder"
  },
 "build": {
  "appId": "com.example.fileconverter",
  "productName": "FileConverter",
  "directories": {
    "output": "dist"
  },
  "files": [
    "**/*",
    "style/**/*",
    "!node_modules/*",
    "!dist/*"
  ],
  "win": {
    "target": "nsis"
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  }
},
  "dependencies": {
    "png-to-ico": "^2.1.8",
    "potrace": "^2.1.8",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^3.4.17"
  }
}
